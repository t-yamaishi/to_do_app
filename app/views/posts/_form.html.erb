<%= form_with(model: post, local: false) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "エラー") %> 保存できません:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, placeholder: 'todoを入力' %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.datetime_select :deadline, include_blank: true %>
  </div>

  <div class="tag">
    <%= form.label :tag %>:
    <label for="tag_check.">
    <% if current_user.tags.all[0].nil? %>
      <%= link_to 'タブを作る', tags_path %>
    <% else %>
      <%= form.collection_check_boxes(:tag_ids, Tag.all, :id, :name ) %>
    <% end %>
    </label>
  </div>

  <div class = "status">
    <%= form.label :status %>
    <%= form.select :status, Post.statuses.keys.to_a %>
  </div>

  <div class="actions">
    <%= form.button "登録する"%>
  </div>
<% end %>
