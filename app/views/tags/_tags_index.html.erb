<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>名前</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% tags.each do |tag| %>
      <% if tag.id.present? %>
        <tr>
          <div class="tag-content" id = "this_tag_<%= tag.id %>"></div>
          <td><%= tag.name %></td>
          <td><%= link_to '編集', edit_tag_path(tag), remote: true, class: "btn btn-sm btn-success" %></td>
          <td><%= link_to '削除', tag, class: "btn btn-sm btn-danger", method: :delete, remote: true, data: { confirm: '削除してもよろしいでしょうか' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
